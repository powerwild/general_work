extends nav.pug

block content
    if pastaList.length
        table
            thead
                tr
                    th Label
                    th Description
                    th Taste
                    th Noodle
                    th Sauce
            tbody
                each pasta in pastaList
                    tr
                        td= pasta.label
                        td= pasta.description
                        td= pasta.taste
                        td: a(href=`/noodle/${pasta.noodleId}`)= pasta.Noodle.name
                        td: a(href=`/sauce/${pasta.sauceId}`)= pasta.Sauce.name
